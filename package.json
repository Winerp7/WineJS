{
  "name": "winejs",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "merge": "rimraf ./dist && tsc",
    "dev:clean": "rimraf ./dist",
    "dev:build": "tsc -w",
    "dev:run": "nodemon ./dist/bin/www",
    "dev": "concurrently npm:dev:*",
    "build": "tailwindcss build ./public/stylesheets/tailwind.css -o ./public/stylesheets/styles.css",
    "postinstall": "tsc",
    "start": "node ./dist/bin/www",
    "cy:run": "cypress run",
    "test": "tsc && cross-env NODE_ENV=test start-server-and-test start http://localhost:3000 cy:run",
    "sample": "tsc && node ./dist/util/load-sample-data.js",
    "nuke": "tsc && node ./dist/util/load-sample-data.js --delete"
  },
  "dependencies": {
    "@tailwindcss/custom-forms": "^0.2.1",
    "autoprefixer": "^10.0.1",
    "connect-flash": "^0.1.1",
    "connect-mongo": "^3.2.0",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "es6-promisify": "^6.1.1",
    "express": "~4.16.1",
    "express-session": "^1.17.1",
    "express-validator": "^5.3.1",
    "html-to-text": "^6.0.0",
    "http-errors": "~1.6.3",
    "juice": "^7.0.0",
    "md5": "^2.3.0",
    "mongodb": "^3.6.2",
    "mongoose": "^5.10.9",
    "mongoose-mongodb-errors": "0.0.2",
    "morgan": "~1.9.1",
    "node-chartist": "^1.0.5",
    "nodemailer": "^6.4.16",
    "passport": "^0.4.1",
    "passport-local-mongoose": "^6.0.1",
    "postcss-cli": "^8.1.0",
    "pug": "2.0.0-beta11",
    "rimraf": "^3.0.2",
    "slugify": "^1.4.5",
    "tailwindcss": "^1.9.6",
    "typescript": "^4.0.5",
    "validator": "^13.1.17"
  },
  "devDependencies": {
    "@types/connect-flash": "0.0.35",
    "@types/cookie-parser": "^1.4.2",
    "@types/es6-promisify": "^6.0.0",
    "@types/express": "^4.17.8",
    "@types/express-session": "^1.17.0",
    "@types/html-to-text": "^5.1.2",
    "@types/http-errors": "^1.8.0",
    "@types/md5": "^2.2.1",
    "@types/mongodb": "^3.5.33",
    "@types/mongoose": "^5.7.37",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.6",
    "@types/nodemailer": "^6.4.0",
    "@types/passport": "^1.0.4",
    "@types/passport-local-mongoose": "^4.0.13",
    "@types/pug": "^2.0.4",
    "@types/validator": "^13.1.0",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "cypress": "^6.0.1",
    "nodemon": "^2.0.5",
    "start-server-and-test": "^1.11.6"
  }
}
