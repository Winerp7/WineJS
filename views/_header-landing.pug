script.
  window.addEventListener('DOMContentLoaded', () => {
    const body = document.querySelector('#body');
    const overlay = document.querySelector('#overlay');
    const login = document.querySelector('#signInBtn');
    const closeLogin = document.querySelector('#closeModal');
    const login2 = document.querySelector('#loginBtn');

    const overlaySignUp = document.querySelector('#overlaySignUp')
    const closeSignUp = document.querySelector('#closeModalSignUp');
    const signup = document.querySelector('#signUpBtn');
    const signup2 = document.querySelector('#signUpBtn2');

    const modalNewPassword = document.querySelector('#modalNewPassword');
    const newPassword = document.querySelector('#forgotPassword');
    const closeNewPassword = document.querySelector('#closeModalNewPassword');
    const cancelNewPassword = document.querySelector('#cancelNewPasswordBtn');

    // "toggle" checks if the element has class hidden and flex, if not, it adds, if it does, it removes
    const toggleModal = () => {
      overlay.classList.toggle('hidden');
      body.classList.toggle('overflow-hidden');
    }

    const toggleModal2 = () => {
      overlaySignUp.classList.toggle('hidden');
      overlay.classList.toggle('hidden');
    }

    const toggleSignUpModal = () => {
      overlaySignUp.classList.toggle('hidden');
      body.classList.toggle('overflow-hidden');
    }

    const toggleSignUpModal2 = () => {
      overlay.classList.toggle('hidden');
      overlaySignUp.classList.toggle('hidden');
    }

    const toggleNewPasswordModal = () => {
      modalNewPassword.classList.toggle('hidden');
      overlay.classList.toggle('hidden');
    }

    const toggleNewPasswordModal2 = () => {
      toggleNewPasswordModal();
      toggleModal();
    }

    login.addEventListener('click', toggleModal);
    closeLogin.addEventListener('click', toggleModal);
    login2.addEventListener('click', toggleModal2);

    signup.addEventListener('click', toggleSignUpModal);
    closeSignUp.addEventListener('click', toggleSignUpModal);
    signup2.addEventListener('click', toggleSignUpModal2);

    newPassword.addEventListener('click', toggleNewPasswordModal);
    closeNewPassword.addEventListener('click', toggleNewPasswordModal2);
    cancelNewPassword.addEventListener('click', toggleNewPasswordModal);
  })
