header.header
  nav.nav.nav--tours
    a.nav__el(href='/') Home
  .header__logo
    img(src='/images/logo-white.png' alt='Wine logo')
  nav.nav.nav--user
    if user
      a.nav__el.nav__el--logout Log out
      a.nav__el(href='/me')
        img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name}`)
        span= user.name.split(' ')[0]
    else
      a.nav__el(href='/login') Log in
      a.nav__el.nav__el--cta(href='#') Sign up

header.main-header
      nav.main-header__nav
          ul.main-header__item-list
            li.main-header__item
              a(href="/", class=(path === '/' ? 'active' : '')) Homepage
            li.main-header__item
              a(href="/dashboard", class=(path === '/dashboard' ? 'active' : '')) Dashboard
            li.main-header__item
              a(href="/add-node", class=(path === '/add-device' ? 'active' : '')) Add Device
            li.main-header__item
              a(href="/nodes", class=(path === '/nodes' ? 'active' : '')) Devices
          block header