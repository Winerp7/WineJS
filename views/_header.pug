script. 
  window.addEventListener('DOMContentLoaded', () => {
    const menuBtn = document.querySelector('#devicesBtn'); 
    const dropdownDev = document.querySelector('#dropdownDevices'); 
    const accountBtn = document.querySelector('#accountBtn')
    const dropdownAcc = document.querySelector('#dropdownAccount')

    menuBtn.addEventListener('click', () => {
      dropdownDev.classList.toggle('hidden');
      menuBtn.classList.toggle('text-white');
      dropdownDev.classList.toggle('shadow-lg');
    })

    accountBtn.addEventListener('click', () => {
      dropdownAcc.classList.toggle('hidden');
      accountBtn.classList.toggle('text-white');
      accountBtn.classList.toggle('bg-teal-300');
      dropdownAcc.classList.toggle('shadow-lg');
    })

  })