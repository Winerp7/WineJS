extends _layout

block content
	div(class="flex flex-col justify-center items-center")
		div(class="max-w-md p-8 rounded-lg bg-gray-100 shadow")
			div(class="flex justify-center")
				img(class="h-16 w-auto" src='/images/logo.png' alt='Wine logo black')
			div(class="flex justify-center items-center")
				p(class="text-2xl font-light px-8") Reset password
			form(method="POST")
				div(class="mt-2 text-sm mx-4")
					| New password
				div(class="mt-1 text-sm mx-4")
					input(type="password" name="passwordReset" id="newPassword" class="focus:outline-none pl-1 w-full rounded border border-gray-700" placeholder="MySecretPassword" required)
				div(class="mt-4 text-sm mx-4")
					| Confirm password
				div(class="mt-1 text-sm mx-4")
					input(type="password" name="passwordResetConfirm" id="newPasswordConfirm" class="focus:outline-none pl-1 w-full rounded border border-gray-700" placeholder="MySecretPassword" required)
				div(class="mt-5 flex justify-center text-md")
					button(id="saveNewPassBtn" class="focus:outline-none px-5 py-1 bg-teal-400 border border-teal-400 rounded-lg text-gray-100 hover:border-teal-400 hover:bg-gray-100 hover:text-teal-400")
						| Save
				div(class="text-xs flex justify-center mt-2 mb-2")
					<a id="cancelNewPasswordBtn" class="cursor-pointer text-teal-400 hover:underline">Cancel</a>