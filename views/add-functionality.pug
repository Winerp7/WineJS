extends _layout 

block content 
	// The form should have 'action=`/functionality/${func._id}/edit` method="GET"' before its class
	div(class="flex flex-col justify-center items-center")
		div(class="place-self-center mb-4 text-3xl text-gray-900") 
			| Add functionality
		form(class="flex flex-col rounded-lg py-6 bg-gray-100 shadow-xl w-4/5")
			div(class="flex flex-col text-lg justify-center items-center mb-4 mx-4")
				div(class="text-gray-600 text-xs mb-2")
					| Please enter name of functionality below
				input(id="funcName" class="focus:outline-none pl-1 bg-gray-200 rounded mx-4")
			div(class="flex flex-col lg:flex-row items-center justify-center")
				div(class="flex items-center justify-center w-1/2")
					div(class="flex flex-col items-center mb-3 h-64 w-3/4")
						div(class="text-gray-700 mb-1") Setup()
						textarea(id="setupFunc" class="text-xs overflow-auto border border-gray-700 rounded-lg p-2 bg-gray-200 w-full h-full")
				div(class="flex items-center justify-center w-1/2")
					div(class="flex flex-col items-center mb-3 h-64 w-3/4")
						div(class="text-gray-700 mb-1") Loop()
						textarea(id="loopFunc" class="text-xs overflow-auto border border-gray-700 rounded-lg p-2 bg-gray-200 w-full h-full")
			div(class="flex items-center justify-center mt-4")
				button(type="submit" class="text-sm place-self-center px-5 py-1 bg-teal-300 border border-teal-300 rounded-lg text-gray-100 hover:border-teal-300 hover:bg-gray-100 hover:text-teal-300 focus:outline-none") 
					| Add functionality