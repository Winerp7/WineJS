mixin nodeCard(node = {})
  form(action=`/nodes/${node._id}/edit` method="GET" class="flex flex-col mx-12 rounded-3xl text-xs my-4 py-6 bg-gray-100 shadow-md w-auto")
    // if node.isMaster == true? MASTER NODE
      else SLAVE NODE 
    div(class="place-self-center text-lg mb-4") 
      if (node.isMaster)
        | Master node
      else 
        p(class="text-gray-600") Slave node
    div(class="flex flex-row")
      div(class="w-64")
      div(class="w-32")
    div(class="flex flex-col items-center justify-center mb-4")
      div(class="flex flex-col items-center overflow-auto mb-2")
        p(class="text-gray-700") Name
        p(class="text-lg") #{node.name}
      div(class="flex flex-col items-center overflow-auto mb-2")
        p(class="text-gray-700") ID
        p(class="text-lg") #{node.nodeID}
      div(class="flex flex-col items-center overflow-auto mb-2")
        p(class="text-gray-700") Status
        p(class="text-lg") #{node.status}
      if (!node.isMaster)
        div(class="flex flex-col items-center overflow-auto")
          p(class="text-gray-700") Sensors
            each sensor in node.sensors
              div(class="flex flex-col items-center justify-center text-lg")
                | #{sensor}
    div(class="flex flex-row items-center justify-center")
      button(id="activeBtn" class="mr-2 mt-2 text-sm place-self-center px-5 py-1 bg-red-500 border border-red-500 rounded-lg text-gray-100 hover:border-red-500 hover:bg-gray-100 hover:text-red-500 focus:outline-none") 
        // add if statement to determine if button should be "deactivate" or "activate"
        | Deactivate
      button(type="submit" class="mt-2 text-sm place-self-center px-5 py-1 bg-teal-300 border border-teal-300 rounded-lg text-gray-100 hover:border-teal-300 hover:bg-gray-100 hover:text-teal-300 focus:outline-none") 
        | Edit node

